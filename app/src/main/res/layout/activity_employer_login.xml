<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nisha.daily_jobs.employer.view.LoginAuthentication.EmployerLogin">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:text="The Daily Jobs"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff8f93ff"
        android:textSize="@dimen/abc_action_bar_stacked_max_height"
        android:textStyle="bold" />
<!--
    <ImageView
        android:layout_width="220dp"
        android:layout_height="500dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="20dp"
        android:src="@drawable/LetsCreateJobsPics" />-->

    <EditText
        android:id="@+id/textBoxEmployerName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textBoxPassword"
        android:layout_alignLeft="@+id/textView13"
        android:layout_marginBottom="41dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:hint="@string/username"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/darker_gray" />

    <EditText
        android:id="@+id/textBoxPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonEmployerSignUp"
        android:layout_alignLeft="@+id/textBoxEmployerName"
        android:layout_alignRight="@+id/textBoxEmployerName"
        android:layout_marginBottom="36dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:hint="@string/password"
        android:password="true"
        android:textColor="@android:color/black" />


    <Button
        android:id="@+id/buttonEmployerSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signUpLink"
        android:layout_alignLeft="@+id/signUpLink"
        android:layout_marginBottom="36dp"
        android:background="#ff8f93ff"
        android:text="Login"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/signUpLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="54dp"
        android:paddingTop="25dp"
        android:text="Create Account"
        android:textColor="@color/accent_material_light"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
