<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="false"
    android:layout_width="fill_parent"
    tools:context="com.example.nisha.daily_jobs.employer.view.LoginAuthentication.EmployerSignUp"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:hapticFeedbackEnabled="false"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.nisha.daily_jobs.employer.view.LoginAuthentication.EmployerSignUp">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:fontFamily="cursive"
            android:text="The Daily Jobs"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ff8280ff"
            android:textSize="@dimen/abc_action_bar_stacked_max_height"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/textBoxEmployerName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textBoxEmail"
            android:layout_alignLeft="@+id/signInLink"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@android:color/white"
            android:hint="@string/username"
            app:backgroundTint="@android:color/white" />


        <EditText
            android:id="@+id/textBoxEmail"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textBoxPassword"
            android:layout_alignLeft="@+id/textBoxEmployerName"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@android:color/white"
            android:hint="Email"
            app:backgroundTint="@android:color/white" />

        <EditText
            android:id="@+id/textBoxPhone"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@android:color/white"
            android:editable="true"
            android:ems="10"
            android:hint="Phone"
            android:inputType="phone" />

        <EditText
            android:id="@+id/textBoxPassword"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textBoxConfirmPassword"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@android:color/white"
            android:hint="@string/password"
            android:password="true" />

        <EditText
            android:id="@+id/textBoxConfirmPassword"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@android:color/white"
            android:hint="Confirm Password"
            android:password="true" />

        <Button
            android:id="@+id/buttonEmployerSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/signInLink"
            android:layout_alignRight="@+id/textBoxPassword"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="#ff8280ff"
            android:text="SignUp"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/signInLink"
            android:layout_width="wrap_content"
            android:layout_height="149dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="106dp"
            android:paddingTop="25dp"
            android:text="Have an account? Sign In here"
            android:textColor="@color/accent_material_light" />


    </LinearLayout>
</ScrollView>